    "n = int(input(\"Enter the value of n :\"))\n",
    "def add(n):\n",
    "    if n == 0:\n",
    "        return 0\n",
    "    else:\n",
    "        s = n + add(n-1)\n",
    "        return s\n",
    "\n",
    "output = add(n)\n",
    "print(\"The sum from 1 to n is : \",output)"
